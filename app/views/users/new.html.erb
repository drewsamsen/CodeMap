<% set_title("Sign Un") %>
<menu>
  <%= link_to "Home", root_path %>
</menu>

<p class="note_subject">Sign Up</p>

<% content_for :page do %>

  <%= form_for @user do |f| %>
    <%= f.error_messages %>

    <p>
      <%= f.label :email %><br />
      <%= f.text_field :email %>
    </p>

    <p>
      <%= f.label :password %><br />
      <%= f.password_field :password %>
    </p>

    <p>
      <%= f.label :password_confirmation %><br />
      <%= f.password_field :password_confirmation %>
    </p>

    <%= f.submit "Sign Up" %>
  <% end %>
<% end %>

