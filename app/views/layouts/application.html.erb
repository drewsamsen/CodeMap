<!DOCTYPE html>
<html>
  <head>
    <title><%= content_for?(:title) ? yield(:title) : "CodeMap" %></title>
    <%= stylesheet_link_tag "application" %>
    <%= javascript_include_tag "application" %>
    <%= csrf_meta_tag %>
    <%= yield(:head) %>
  </head>
  <body>
    <div id="container">      
      <% flash.each do |name, msg| %>
        <%= content_tag :div, msg, :id => "flash_#{name}" %>
      <% end %>        
      <%= yield %>

      <div id="page">
        <%= yield :page %>
      </div>

      <div id="sidebar">
        <%= yield :sidebar %>
      </div>


    </div>
  </body>
</html>
