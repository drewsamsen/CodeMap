<tr>
  <td><%= link_to trim(note.subject, 70), note, :class => "subject" %></td>
  <td>
    <% if note.mastery %>
      <span class="mastery">
        <%= note.mastery %></h5>
      </span>
    <% end %>
  </td>
  <td>
    <% if note.technology %>   
      <%= link_to note.technology.name, 
              root_path(:technology => note.technology.id), 
              :method => :get,
              :class => "technology",
              :title => "More #{note.technology.name} Notes" %>
    <% end %>
  </td>
</tr>
