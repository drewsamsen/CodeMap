<h3><%= link_to "Home", notes_path %> > <%= @note.subject %></h3>

<%= markdown(@note.description) if @note.description %>

<% if @note.technology %>
  <p>Technology: <%= link_to @note.technology.name, technology_path(@note.technology) %></p>
<% end %>

<menu>
  <%= link_to "Edit", edit_note_path(@note) %>
  <%= link_to "Delete", @note, 
      :method => :delete,
      :confirm => "Are you sure you want to delete this note?" %>
</menu>

